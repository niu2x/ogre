// Steep parallax occlusion mapping
material RTSS/ParallaxOcclusionMapping
{
   technique
   {
       pass
       {
           specular 1 1 1 32

           // Base diffuse texture map
           texture_unit
           {
              texture Bricks076C_diffspec.dds
           }

           rtshader_system
           {
               lighting_stage normal_map Bricks076C_normheight.dds parallax_occlusion
           }
       }
   }
}